[build]
	incremental = false
	rustflags = [
{{- if eq .chezmoi.os "linux" -}}
		"-C", "link-arg=-fuse-ld=mold",
{{- else if eq .chezmoi.os "darwin" -}}
		"-C", "link-arg=-fuse-ld=lld",
{{- end -}}
	]
{{ if (lookPath "sccache") -}}
	rustc-wrapper = "sccache"
{{- end -}}

[registries.crates-io]
	protocol = "sparse"

[profile.release]
	debug = 1
	lto = "thin"
	strip = "none"

[profile.dev]
	opt-level = 1

[profile.perf]
	codegen-units = 1
	debug-assertions = false
	incremental = false
	inherits = "release"
	lto = "fat"
	opt-level = 3
	overflow-checks = false
	strip = "debuginfo"
